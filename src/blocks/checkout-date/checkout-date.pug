include ../custom-input/custom-input
include ../custom-select/custom-select

mixin checkout-date()
    +b.checkout-step.checkout-date.js-courier-date
        +e.body
            +e.top
                +e.header
                    +e.H2.title Дата получения
                p Доступна только онлайн-оплата
            +e.inputs
                +e.inputs-row
                    +e.input
                        +custom-input({name: 'date', label: 'Выбранная дата', id: 'deliveryDate', required: true})(pattern="[0-9]{2}-[0-9]{2}-[0-9]{4}")
                    +e.input
                        +e.range
                            +e.BUTTON.range-btn.active(type='button' data-type='free') Бесплатно
                            +e.BUTTON.range-btn(type='button' data-type='paid') Платно
                            button.tip(type='button' data-content='При выборе 7-часового интервала — доставка бесплатная, при выборе 2&#8209;часового интервала — доставка +100 ₽') ?
                        +custom-select(cart.deliveryTimeSelect)(id='deliveryTime' class='bordered disabled')
