mixin custom-select({name, options = [], placeholder = false, label = false, defaultValue = ''})
    +b.custom-select&attributes(attributes)
        if (label)
            +e.LABEL.label !{label}
        if (name)
            +e.INPUT.value(type='hidden' name=name value=defaultValue)
        +e.BUTTON.selected(type='button' tabindex='0')
            | !{placeholder || options[0].title}
        +e.dropdown(aria-expanded='false')
            +e.UL.options
                if (options && options.length > 0)
                    each option in options
                        +e.LI.option(tabindex='0',data-id=(option.id) ? option.id : false, data-price-per=(option.perPrice) ? option.perPrice : false,data-price=(option.currentPrice) ? option.currentPrice : false, data-old-price=(option.oldPrice) ? option.oldPrice : false)= option.title || option
                else
                    block
