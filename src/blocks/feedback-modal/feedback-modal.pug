include ../custom-input/custom-input
include ../custom-select/custom-select


mixin feedback-modal()
    .modal#feedbackModal(aria-hidden='true')
        +b.feedback-modal
            .modal__overlay(tabindex='-1' data-micromodal-close='')
                .modal__dialog(role='dialog' aria-modal='true' aria-labelledby='title' data-micromodal-close='')
                    +e.body
                        +e.BUTTON.close.modal__close(aria-label='Закрыть окно' data-micromodal-close='')
                            svg(id="close" viewBox="0 0 14 14" aria-label="Иконка")
                                path(d="M.408 11.998c-.378.387-.395 1.072.009 1.468.404.395 1.081.386 1.468.009l4.992-4.993 4.983 4.993c.396.386 1.073.395 1.468-.01.396-.403.404-1.071.009-1.467L8.345 7.006l4.992-4.984a1.048 1.048 0 00-.009-1.467 1.065 1.065 0 00-1.468-.01L6.877 5.539 1.885.546C1.498.168.812.15.417.555.021.959.03 1.635.408 2.014L5.4 7.006.408 11.998z")
                        +e.heading(arial-label='title') Пожелания и предложения
                        +e.FORM.form(action='/feedback-submit.php')
                            +e.inputs-row
                                +e.input
                                    +custom-input({name: 'full-name', label: 'ФИО', id: 'feedbackFullName', required: true})(data-validate='text')
                            +e.inputs-row
                                +e.input
                                    +custom-input({inputType: 'text', name: 'phone', label: 'Ваш телефон', id: 'feedbackPhone', required: true})(data-validate='phone')
                            +e.inputs-row
                                +e.input
                                    +custom-input({inputType: 'email', name: 'email', label: 'Email', id: 'feedbackEmail', required: true})(data-validate='email')
                            +e.inputs-row
                                +e.input
                                    +custom-select({name: 'theme', placeholder: 'Выберите тему из списка', options: ['Вопрос по ассортименту', 'Вопрос по качеству', 'Вопрос по доставке', 'Претензия', 'Другое']})(class='bordered' id='themeSelect')
                            +e.inputs-row
                                +e.input
                                    +custom-input({inputType: 'textarea', name: 'comment', label: 'Напишите отзыв', id: 'feedbackComment'})(rows='3')
                            +e.actions
                                +e.BUTTON.confirm.btn.--orange(type='submit') Отправить
                                +e.P.policy Нажимая на кнопку «Отправить», Вы подтверждаете, что ознакомлены с #[a(href="/") политикой конфиденциальности]